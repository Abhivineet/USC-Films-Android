<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/review_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="5dp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardUseCompatPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:paddingStart="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/review_author_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:textColor="@color/highlight"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rating_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/review_author_header"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                >
                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_star_rate_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/rating_text"
                    android:contentDescription="@string/star" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/review_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/rating_holder"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>